{
  "OpenPrint": {
    "Port": 5050,
    "Host": "127.0.0.1",
    "AutoDiscoverUSB": true,
    "UsbDevicePaths": [
      "/dev/usb/lp*",
      "/dev/ttyUSB*"
    ],
    "NetworkPrinters": [
      {
        "Name": "Kitchen Printer",
        "IpAddress": "192.168.1.100",
        "Port": 9100,
        "Enabled": true
      }
    ],
    "PrintDefaults": {
      "PaperCut": true,
      "Encoding": "CP866",
      "LineSpacing": 30,
      "FontSize": "normal",
      "Alignment": "left"
    },
    "Connection": {
      "TimeoutMs": 5000,
      "RetryCount": 3,
      "RetryDelayMs": 500,
      "PrintTimeoutMs": 30000
    },
    "Discovery": {
      "CacheRefreshIntervalSeconds": 30
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "File": {
      "Enabled": true,
      "Path": "/var/log/openprint/app.log"
    }
  }
}

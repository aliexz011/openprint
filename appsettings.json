{
  "OpenPrint": {
    "Port": 5050,
    "Host": "127.0.0.1",
    "AutoDiscoverUSB": true,

    "UseLibUsb": true,
    "UseWindowsSpooler": true,

    "UsbDevicePaths": [
      "/dev/usb/lp*",
      "/dev/ttyUSB*"
    ],

    "LibUsbPrinters": [
      {
        "Name": "XPrinter (USB Direct)",
        "VendorId": 1155,
        "ProductId": 22304,
        "Enabled": false
      }
    ],

    "WindowsPrinters": [
      {
        "Name": "Kitchen Printer",
        "WindowsPrinterName": "XPRINTER XP-80C",
        "Enabled": false
      }
    ],

    "SerialPorts": [
      {
        "Name": "COM Printer",
        "PortName": "COM3",
        "BaudRate": 9600,
        "Parity": "None",
        "DataBits": 8,
        "StopBits": "One",
        "Enabled": false
      }
    ],

    "PrinterNamePatterns": [
      "XP",
      "XPRINTER",
      "POS",
      "THERMAL",
      "RECEIPT",
      "ESC",
      "58MM",
      "80MM"
    ],

    "NetworkPrinters": [
      {
        "Name": "Network Printer",
        "IpAddress": "192.168.1.100",
        "Port": 9100,
        "Enabled": false
      }
    ],

    "PrintDefaults": {
      "PaperCut": true,
      "Encoding": "CP866",
      "LineSpacing": 30,
      "FontSize": "normal",
      "Alignment": "left"
    },

    "Connection": {
      "TimeoutMs": 5000,
      "RetryCount": 3,
      "RetryDelayMs": 500,
      "PrintTimeoutMs": 30000
    },

    "Discovery": {
      "CacheRefreshIntervalSeconds": 30
    }
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  }
}
